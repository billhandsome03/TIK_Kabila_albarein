#include <iostream>
using namespace std;

int main(){
    int tugas;
    int uts;
    int uas;
    float nilai_tugas;
    float nilai_uts;
    float nilai_uas;
    float nilai_akhir;
        cout<<"masukan nilai tugas = ";cin>>tugas;
        if(tugas > 100){
           cout<<"nilai tidak dapat memenuhi" ;
           return 0;
        }
        cout<<"masukan nilai uts = ";cin>>uts;
        if (uts > 100){
            cout<<"nilai tidak dapat memenuhi" ;
            return 0;
        }
        cout<<"masukan nilai uas = ";cin>>uts;
        if (uas > 100){
            cout<<"nilai tidak dapay memenuhi" ;
            return 0 ;
        }
        
        nilai_tugas= 0.3 + tugas;
        nilai_uts= 0.3 + uts;
        nilai_uas= 0.4 + uas;
        nilai_akhir= nilai_tugas + nilai_uts + nilai_uas;
        cout<<nilai_akhir;
}
